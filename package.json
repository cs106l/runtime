  "description": "A simple WebAssembly runtime and package manager for the browser",
  "main": "./dist/runtime.umd.js",
  "module": "./dist/runtime.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
